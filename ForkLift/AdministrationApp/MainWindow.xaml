                                <Label Content="Tip Masine" Height="28" HorizontalAlignment="Left" Margin="10,20,0,0" Name="label_PropisPromenaTipMasine" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI" FontSize="14" />
