                                </GroupBox>
                                <Button Content="Dodaj Radnika" Height="35" HorizontalAlignment="Right" Margin="0,0,20,20" Name="button_RadnikDodaj" VerticalAlignment="Bottom" Width="160" Click="button_RadnikDodaj_Click" />
